# dbxgo Environment Variable Configuration Example
# This file contains all major environment variables supported by dbxgo
# Usage: source .env.example

##############################################
# Core Component Type Configuration - Required
##############################################

# Store type: available values file, redis
STORE_TYPE="file"

# Source type: currently only supports mysql
SOURCE_TYPE="mysql"

# Output type: available values stdout, redis, kafka, rabbitmq, rocketmq
OUTPUT_TYPE="stdout"

##############################################
# Store Configuration
##############################################

# File store directory (used when STORE_TYPE="file")
STORE_FILE_DIR="runtime"

# Redis store configuration (used when STORE_TYPE="redis")
STORE_REDIS_ADDR="127.0.0.1:6379"
STORE_REDIS_PASSWORD="redis_password"
STORE_REDIS_DB="0"

##############################################
# MySQL Source Configuration
##############################################

# MySQL server address and port
SOURCE_MYSQL_ADDR="127.0.0.1:3306"

# MySQL username
SOURCE_MYSQL_USER="root"

# MySQL password
SOURCE_MYSQL_PASSWORD="123456"

# List of table regex patterns to include, separated by commas
# Example: "dbxgo.users,dbxgo.products"
SOURCE_MYSQL_INCLUDE_TABLE_REGEX="dbxgo.*"

# List of table regex patterns to exclude, separated by commas
# Defaults to excluding system tables
SOURCE_MYSQL_EXCLUDE_TABLE_REGEX="mysql.*,information_schema.*,performance_schema.*,sys.*"

##############################################
# Output Configuration
##############################################

# Kafka Output Configuration (when OUTPUT_TYPE="kafka")
OUTPUT_KAFKA_BROKERS="kafka1:9092,kafka2:9092"
OUTPUT_KAFKA_TOPIC="database_changes"

# Redis Output Configuration (when OUTPUT_TYPE="redis")
OUTPUT_REDIS_ADDR="127.0.0.1:6379"
OUTPUT_REDIS_PASSWORD="redis_password"
OUTPUT_REDIS_DB="0"
OUTPUT_REDIS_KEY="dbxgo-events"

# RabbitMQ Output Configuration (when OUTPUT_TYPE="rabbitmq")
OUTPUT_RABBITMQ_URL="amqp://guest:guest@rabbitmq:5672/"
OUTPUT_RABBITMQ_QUEUE="dbxgo-events"
OUTPUT_RABBITMQ_DURABLE="true"
OUTPUT_RABBITMQ_AUTOACK="false"
OUTPUT_RABBITMQ_EXCLUSIVE="false"
OUTPUT_RABBITMQ_NOWAIT="false"

# RocketMQ Output Configuration (when OUTPUT_TYPE="rocketmq")
OUTPUT_ROCKETMQ_SERVERS="127.0.0.1:9876"
OUTPUT_ROCKETMQ_TOPIC="dbxgo-events"
OUTPUT_ROCKETMQ_GROUP="dbxgo-group"
OUTPUT_ROCKETMQ_RETRY="3"
OUTPUT_ROCKETMQ_NAMESPACE="test"
OUTPUT_ROCKETMQ_ACCESS_KEY="RocketMQ"
OUTPUT_ROCKETMQ_SECRET_KEY="12345678"

# Pulsar Output Configuration (when OUTPUT_TYPE="pulsar")
OUTPUT_PULSAR_URL="pulsar://127.0.0.1:6650"        # Pulsar broker URL
OUTPUT_PULSAR_TOPIC="dbxgo-events"                 # Pulsar topic name
OUTPUT_PULSAR_TOKEN="YOUR_PULSAR_TOKEN"            # Optional authentication token
OUTPUT_PULSAR_OPERATION_TIMEOUT="30"               # Operation timeout in seconds
OUTPUT_PULSAR_CONNECTION_TIMEOUT="30"              # Connection timeout in seconds

